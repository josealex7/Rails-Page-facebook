<div class="container d-flex align-items-center vh-100">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-8 col-lg-6">
      <div class="">
          <div class="">
            <h1 class="custom-font-size-title">Facebook</h1>
            <p class="custom-font-size">Facebook te ayuda a comunicarte y compartir con las personas que forman parte de tu vida.</p>
          </div>
        </div>
      </div>
      <div class="col-md-8 col-lg-4">
        <div class="card">
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field my-3">
                <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder:"Correo electrónico o número de teléfono" %>
              </div>

              <div class="field my-3">
                <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder:"Contraseña" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field my-3">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="form-group my-3">
                <%= f.submit "Iniciar sesión", class: "btn btn-primary btn-block form-control" %>
              </div>
              <%= render "devise/shared/links" %>

            <% end %>
            <div class="text-center">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "text-decoration-none"  %><br />
              <% end %>
            </div>
          </div>
        </div>
        <div class="card my-3">
          <div class="card-body">
            <p class="text-center">¿No tienes una cuenta?</p>
            <div class="text-center">
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Crear cuenta nueva", new_registration_path(resource_name), class: "btn btn-success btn-block" %><br />
              <% end %>
            </div>
          </div>
        </div>
        <div class="text-center">
          <p>Crea una página para una celebridad, una marca o un negocio.</p>
        </div>
      </div>
    </div>
  </div>