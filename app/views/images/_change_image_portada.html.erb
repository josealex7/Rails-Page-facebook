<button type="button" class="btn btn-link text-decoration-none add-image-button" data-bs-toggle="modal" data-bs-target="#loadImagePortada">
    <div class="card">
        <div class="card-body d-flex align-items-center justify-content-center">
            <div>Seleccionar portada <i class='fa fa-plus'></i> </div>
        </div>
    </div>
</button>

<div class="modal fade" id="loadImagePortada" tabindex="-1" aria-labelledby="loadImagePortadaLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="loadImagePortadaLabel">Seleccionar foto de portada</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% @imagenes.each do |imagen| %>
                    <li class="col list-unstyled imagenPortada" id="<%= imagen.id %>">
                    <%= image_tag imagen.url, class: "images-users-portada"%>
                    </li>
                <% end %>
            </div>
        </div>
        <div class="modal-footer">
            <%= form_tag('/users/update_image_portada', method: :put) do %>
                <%= hidden_field_tag(:portada_picture_id) %>
                <%= button_tag('Guardar cambios', class: 'btn btn-primary') %>
            <% end %>
        </div>
    </div>
  </div>
</div>