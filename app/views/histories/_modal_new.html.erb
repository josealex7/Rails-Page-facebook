<div class="modal fade" id="newHistoryModal" tabindex="-1" aria-labelledby="newHistoryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newHistoryModalLabel">Nueva historia</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container">
            <div class="">
                <div class="media">
                <div class="d-flex align-items-center">
                <div>
                <% if current_user.image_profile_id %>
                    <%= image_tag Image.find( current_user.image_profile_id).url, class:"image-icon-publi" %>
                    
                <% else %>
                    <img src="https://via.placeholder.com/50" class="mr-3 rounded-circle" alt="...">
                <% end %>
                </div>
                <div></div>
                <h5 class="my-4 mx-2"><%= current_user.user_type != 'page' ? current_user.full_name : current_user.first_name %></h5>
                </div>
                <%= form_tag histories_path, method: :post, multipart: true, class: "form-inline", id:"new_history_form" do %>
                    <div class="my-3">
                        <label for="formFile" class="form-label">Agregar una foto a la historia</label>
                        <%= file_field_tag 'image[url]', class: "form-control", type: "file", id:"formFile" %>
                    </div>
                    <%= submit_tag "Publicar", class: "btn btn-primary w-100" %>
                <% end %>
            </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>